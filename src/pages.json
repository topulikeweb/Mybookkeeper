{
  "easycom": {
    "autoscan": true,
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/home/home",
      "style": {
      }
    },
    {
      "path": "pages/statistics/statistics",
      "style": {
      }
    },
    {
      "path": "pages/chart/chart",
      "style": {
      }
    },
    {
      "path": "pages/my/my",
      "style": {
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "my-bookkeeper",
    "navigationBarBackgroundColor": "#2855fc",
    "backgroundColor": "#F8F8F8"
  },
  "subPackages": [
    {
      "root": "subpkg",
      "pages": [
        {
          "path": "billing_page/billing_page",
          "style": {
            "navigationBarTitleText": "记一笔",
            "enablePullDownRefresh": false
          }
        }
      ]
    }
  ],
  "tabBar": {
    "selectedColor": "#555daa",
    "backgroundColor": "#fdfdfd",
    "list": [
      {
        "pagePath": "pages/home/home",
        "text": "首页",
        "iconPath": "./static/home.png",
        "selectedIconPath": "./static/home-p.png"
      },
      {
        "pagePath": "pages/statistics/statistics",
        "text": "统计",
        "iconPath": "./static/statistic.png",
        "selectedIconPath": "./static/statistic-p.png"
      },
      {
        "pagePath": "pages/chart/chart",
        "text": "图表",
        "iconPath": "./static/chart.png",
        "selectedIconPath": "./static/chart-p.png"
      },
      {
        "pagePath": "pages/my/my",
        "text": "我的",
        "iconPath": "./static/my.png",
        "selectedIconPath": "./static/my-p.png"
      }
    ]
  }
}
